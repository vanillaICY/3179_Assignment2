{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Monthly Visitors % in Australia by State (Jul 2024 - Jun 2025)",
    "fontSize": 22,
    "fontWeight": "bold",
    "font": "sans-serif"
  },
  "width": 600,
  "height": 400,
  "projection": {"type": "identity", "reflectY": true},
  "params": [
    {
      "name": "Month_selection",
      "value": "1",
      "bind": {
        "input": "range",
        "min": 1,
        "max": 12,
        "step": 1,
        "name": "Month: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/main/data/ne_110m_ocean.json",
        "format": {"type": "topojson", "feature": "ne_110m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "#a2d7ec", "stroke": null}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/main/data/ne_50m_admin_1_states_provinces.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.name",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/refs/heads/main/data/Visitors.csv"
      },
      "transform": [
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/main/data/ne_50m_admin_1_states_provinces.json",
              "format": {
                "type": "topojson",
                "feature": "ne_50m_admin_1_states_provinces"
              }
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {"calculate": "datum.Percentage / 100", "as": "PercentageD"},
        {"filter": "datum.Month == Month_selection"}
      ],
      "mark": {"type": "geoshape", "stroke": "gray", "strokeWidth": 1.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Percentage",
          "type": "quantitative",
          "title": "Arrivals (%)",
          "legend": {"format": ""},
          "scale": {
            "type": "threshold",
            "domain": [1, 5, 10, 15, 20, 25, 30, 35, 40]
          }
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State/Territory"},
          {"field": "Month", "type": "nominal"},
          {
            "field": "Percentage",
            "type": "quantitative",
            "title": "Percentage (%)",
            "format": ".1f"
          },
          {
            "field": "Arriavls",
            "type": "nominal",
            "title": "Arrivals",
            "format": ","
          }
        ]
      }
    },
    {
      "data": {
        "graticule": {"step": [10, 10], "extent": [[111, -45], [155, -10.5]]}
      },
      "mark": {"type": "geoshape", "stroke": "#3794d679", "strokeWidth": 1}
    }
  ],
  "config": {}
}