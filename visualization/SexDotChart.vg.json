              },
              "description": {
                "signal": "\"rank: \" + (format(datum[\"rank\"], \"\")) + \"; Sex: \" + (isValid(datum[\"Sex\"]) ? datum[\"Sex\"] : \"\"+datum[\"Sex\"]) + \"; emoji: \" + (isValid(datum[\"emoji\"]) ? datum[\"emoji\"] : \"\"+datum[\"emoji\"]) + \"; Arrivals: \" + (format(datum[\"Arrivals\"], \",\"))"
