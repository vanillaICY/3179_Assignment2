              "x": { "scale": "x", "field": "rank" },
              "y": { "scale": "y", "field": "Sex" },
              "text": {
                "signal": "isValid(datum[\"emoji\"]) ? datum[\"emoji\"] : \"\"+datum[\"emoji\"]"
              },
