{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Visitors in Australia (24-25)",
  "width": 500,
  "height": 300,
  "projection": {"type": "identity", "reflectY": true},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/refs/heads/main/data/ne_110m_ocean.json",
        "format": {"type": "topojson", "feature": "ne_110m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "#a2d7ec", "stroke": null}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/refs/heads/main/data/ne_50m_admin_1_states_provinces.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/refs/heads/main/data/state_arrivals_2024_25.csv"
            },
            "key": "State",
            "fields": ["Percentage", "Arrivals"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 2},
      "encoding": {
        "color": {
          "field": "Percentage",
          "type": "quantitative",
          "title": "# Arrivals (24-25)"
        },
        "tooltip": [
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "State/Territory"
          },
          {
            "field": "Percentage",
            "type": "quantitative",
            "title": "Percentage (%)",
            "format": ".1f"
          },
          {
            "field": "Arrivals",
            "type": "quantitative",
            "title": "Arrivals",
            "format": ","
          }
        ]
      }
    }
  ],
  "config": {}
}