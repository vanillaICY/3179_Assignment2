{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "background": "null",
  "padding": 5,
  "width": 300,
  "height": 300,
  "title": {
    "text": "Purpose of Visitor Arrivals (%)",
    "fontSize": 22,
    "fontWeight": "bold",
    "font": "sans-serif",
    "frame": "group"
  },
  "style": "view",
  "encode": {"update": {"stroke": {"value": null}}},
  "data": [
    {"name": "hoverPurpose_store"},
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/refs/heads/main/data/arrivals_purpose.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "formula",
          "expr": "['2018-19','2022-23','2023-24','2024-25'][yearIndex]",
          "as": "SelectedYear"
        },
        {"type": "filter", "expr": "datum.Year === datum.SelectedYear"}
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "stack",
          "groupby": [],
          "field": "Percent",
          "sort": {"field": ["Purpose"], "order": ["ascending"]},
          "as": ["Percent_start", "Percent_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Percent\"]) && isFinite(+datum[\"Percent\"])"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "stack",
          "groupby": [],
          "field": "Percent",
          "sort": {"field": ["Percent"], "order": ["ascending"]},
          "as": ["Percent_start", "Percent_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Percent\"]) && isFinite(+datum[\"Percent\"])"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "unit",
      "value": {},
      "on": [
        {"events": "pointermove", "update": "isTuple(group()) ? group() : unit"}
      ]
    },
    {
      "name": "hoverPurpose",
      "update": "vlSelectionResolve(\"hoverPurpose_store\", \"union\", true, true)"
    },
    {
      "name": "yearIndex",
      "value": 3,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 3,
        "step": 1,
        "name": "Year from 2018 (exclude 20-21): "
      }
    },
    {
      "name": "hoverPurpose_tuple",
      "on": [
        {
          "events": [{"source": "scope", "type": "pointerover"}],
          "update": "datum && item().mark.marktype !== 'group' && indexof(item().mark.role, 'legend') < 0 ? {unit: \"layer_0\", fields: hoverPurpose_tuple_fields, values: [(item().isVoronoi ? datum.datum : datum)[\"Purpose\"]]} : null",
          "force": true
        },
        {"events": [{"source": "view", "type": "pointerout"}], "update": "null"}
      ]
    },
    {
      "name": "hoverPurpose_tuple_fields",
      "value": [{"type": "E", "field": "Purpose"}]
    },
    {
      "name": "hoverPurpose_toggle",
      "value": false,
      "on": [
        {
          "events": [{"source": "scope", "type": "pointerover"}],
          "update": "event.shiftKey"
        },
        {
          "events": [{"source": "view", "type": "pointerout"}],
          "update": "false"
        }
      ]
    },
    {
      "name": "hoverPurpose_modify",
      "on": [
        {
          "events": {"signal": "hoverPurpose_tuple"},
          "update": "modify(\"hoverPurpose_store\", hoverPurpose_toggle ? null : hoverPurpose_tuple, hoverPurpose_toggle ? null : true, hoverPurpose_toggle ? hoverPurpose_tuple : null)"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "arc",
      "style": ["arc"],
      "interactive": true,
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "stroke": {"value": "#fff"},
          "innerRadius": {"value": 30},
          "fill": {"scale": "color", "field": "Purpose"},
          "opacity": [
            {
              "test": "!length(data(\"hoverPurpose_store\")) || vlSelectionTest(\"hoverPurpose_store\", datum)",
              "value": 1.5
            },
            {"value": 0.25}
          ],
          "tooltip": {
            "signal": "{\"Purpose\": isValid(datum[\"Purpose\"]) ? datum[\"Purpose\"] : \"\"+datum[\"Purpose\"], \"Percent\": format(datum[\"Percent\"], \".1f\"), \"Year\": isValid(datum[\"Year\"]) ? datum[\"Year\"] : \"\"+datum[\"Year\"]}"
          },
          "description": {
            "signal": "\"Percent: \" + (format(datum[\"Percent\"], \"\")) + \"; Purpose: \" + (isValid(datum[\"Purpose\"]) ? datum[\"Purpose\"] : \"\"+datum[\"Purpose\"]) + \"; Year: \" + (isValid(datum[\"Year\"]) ? datum[\"Year\"] : \"\"+datum[\"Year\"])"
          },
          "x": {"signal": "width", "mult": 0.5},
          "y": {"signal": "height", "mult": 0.5},
          "outerRadius": {"scale": "radius", "field": "Percent"},
          "startAngle": {"scale": "theta", "field": "Percent_end"},
          "endAngle": {"scale": "theta", "field": "Percent_start"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "interactive": false,
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "fill": {"value": "black"},
          "opacity": [
            {
              "test": "!length(data(\"hoverPurpose_store\")) || vlSelectionTest(\"hoverPurpose_store\", datum)",
              "value": 1
            },
            {"value": 0.25}
          ],
          "description": {
            "signal": "\"Percent: \" + (format(datum[\"Percent\"], \"\"))"
          },
          "x": {"signal": "width", "mult": 0.5},
          "y": {"signal": "height", "mult": 0.5},
          "text": {"signal": "format(datum[\"Percent\"], \".1f\")"},
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "radius": {"scale": "radius", "field": "Percent", "offset": 10},
          "theta": {
            "signal": "scale(\"theta\", 0.5 * datum[\"Percent_start\"] + 0.5 * datum[\"Percent_end\"])"
          }
        }
      }
    },
    {
      "name": "layer_2_marks",
      "type": "text",
      "style": ["text"],
      "interactive": false,
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "fontSize": {"value": 18},
          "fill": {"value": "black"},
          "x": {"signal": "width", "mult": 0.5},
          "y": {"signal": "height", "mult": 0.5}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "theta",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "Percent_start"},
          {"data": "data_0", "field": "Percent_end"},
          {"data": "data_1", "field": "Percent_start"},
          {"data": "data_1", "field": "Percent_end"}
        ]
      },
      "range": [0, 6.283185307179586],
      "zero": true
    },
    {
      "name": "radius",
      "type": "sqrt",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "Percent"},
          {"data": "data_1", "field": "Percent"}
        ]
      },
      "range": [30, {"signal": "min(width,height)/2"}],
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "data_0", "field": "Purpose", "sort": true},
      "range": "category"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "symbolType": "circle",
      "title": "Purpose",
      "encode": {
        "symbols": {
          "update": {"stroke": {"value": "#fff"}, "opacity": {"value": 1.5}}
        }
      }
    }
  ],
  "config": {}
}