{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Monthly Visitor Arrivals% by State (Jul 2024 - Jun 2025)",
    "fontSize": 16,
    "fontWeight": "bold",
    "font": "sans-serif"
  },
  "background": "aliceblue",
  "width": "container",
  "height": 500,
  "params": [
    {
      "name": "Month_selection",
      "value": "1",
      "bind": {
        "input": "range",
        "min": 1,
        "max": 12,
        "step": 1,
        "name": "Month: "
      }
    },
    {
      "name": "zoom_level",
      "value": 650,
      "bind": {
        "input": "range",
        "min": 500,
        "max": 2000,
        "step": 50,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [134, -26],
      "bind": {
        "input": "select",
        "options": [
          [134, -26],
          [145, -37.95],
          [152, -33],
          [153, -20],
          [125, -26],
          [134, -20],
          [136, -31],
          [153, -35],
          [150, -40]
        ],
        "labels": [
          "Select All",
          "Victoria",
          "New South Wales",
          "Queensland",
          "Western Australia",
          "Northern Territory",
          "South Australia",
          "Australian Capital Territory",
          "Tasmania"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "center": { "expr": "center_to" },
    "scale": { "expr": "zoom_level" }
  },
  "layer": [
    {
      "data": { "sphere": true },
      "mark": { "type": "geoshape", "fill": "#aedbec", "stroke": null }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/main/data/ne_50m_admin_1_states_provinces.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.name",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": { "tooltip": { "field": "note" } }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/refs/heads/main/data/Visitors.csv"
      },
      "transform": [
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/main/data/ne_50m_admin_1_states_provinces.json",
              "format": {
                "type": "topojson",
                "feature": "ne_50m_admin_1_states_provinces"
              }
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        { "calculate": "datum.Percentage / 100", "as": "PercentageD" },
        { "filter": "datum.Month == Month_selection" }
      ],
      "mark": { "type": "geoshape", "stroke": "gray", "strokeWidth": 1.5 },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "Percentage",
          "type": "quantitative",
          "title": "Arrivals (%)",
          "legend": { "format": "" },
          "scale": {
            "type": "threshold",
            "domain": [1, 5, 10, 15, 20, 25, 30, 35, 40]
          }
        },
        "tooltip": [
          { "field": "State", "type": "nominal", "title": "State/Territory" },
          { "field": "Month", "type": "nominal" },
          {
            "field": "Percentage",
            "type": "quantitative",
            "title": "Percentage (%)",
            "format": ".1f"
          },
          {
            "field": "Arriavls",
            "type": "nominal",
            "title": "Arrivals",
            "format": ","
          }
        ]
      }
    },
    {
      "data": {
        "graticule": {
          "step": [10, 10],
          "extent": [
            [90, -60],
            [200, 10]
          ]
        }
      },
      "mark": { "type": "geoshape", "stroke": "#3794d679", "strokeWidth": 1 }
    }
  ],
  "config": {}
}
