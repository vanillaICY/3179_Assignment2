{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "background": "white",
  "padding": 5,
  "width": 900,
  "height": 520,
  "title": {
    "text": "Top 10 Arrivals Source Countries",
    "fontSize": 30,
    "fontWeight": "bold",
    "font": "sans-serif",
    "frame": "group"
  },
  "style": "view",
  "data": [
    {"name": "source_0", "values": [{"type": "Sphere"}]},
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/refs/heads/main/data/ne_110m_admin_0_countries.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"},
      "transform": [
        {
          "type": "formula",
          "expr": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ]
    },
    {
      "name": "source_2",
      "url": "https://raw.githubusercontent.com/vanillaICY/3179_Assignment2/refs/heads/main/data/flowmapdata.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "geojson",
          "fields": ["OriginLA", "OriginLO"],
          "signal": "layer_2_geojson_0"
        },
        {
          "type": "geojson",
          "fields": ["DestLA", "DestLO"],
          "signal": "layer_2_geojson_1"
        },
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["OriginLA", "OriginLO"],
          "as": ["layer_2_x", "layer_2_y"]
        },
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["DestLA", "DestLO"],
          "as": ["layer_2_x2", "layer_2_y2"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Visitors\"]) && isFinite(+datum[\"Visitors\"])"
        }
      ]
    },
    {"name": "source_3", "transform": [{"type": "graticule", "step": [30, 30]}]}
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {
        "signal": "[data('source_0'), data('source_1'), layer_2_geojson_0, layer_2_geojson_1, data('source_3')]"
      },
      "type": "equalEarth"
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "#a2d7ec"},
          "stroke": {"value": null},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_1"},
      "encode": {
        "update": {
          "fill": {"value": "#efefef"},
          "stroke": {"value": "#ccc"},
          "strokeWidth": {"value": 1},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_2_marks",
      "type": "rule",
      "style": ["rule"],
      "from": {"data": "source_2"},
      "encode": {
        "update": {
          "opacity": {"value": 0.8},
          "strokeWidth": {"value": 8},
          "stroke": {"scale": "color", "field": "Visitors"},
          "tooltip": {
            "signal": "{\"From Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"Visitors\": format(datum[\"Visitors\"], \"\")}"
          },
          "description": {
            "signal": "\"OriginLA: \" + (format(datum[\"OriginLA\"], \"\")) + \"; DestLA: \" + (format(datum[\"DestLA\"], \"\")) + \"; OriginLO: \" + (format(datum[\"OriginLO\"], \"\")) + \"; DestLO: \" + (format(datum[\"DestLO\"], \"\")) + \"; Visitors: \" + (format(datum[\"Visitors\"], \".2s\")) + \"; From Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"])"
          },
          "x": {"field": "layer_2_x"},
          "x2": {"field": "layer_2_x2"},
          "y": {"field": "layer_2_y"},
          "y2": {"field": "layer_2_y2"}
        }
      }
    },
    {
      "name": "layer_3_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_3"},
      "encode": {
        "update": {
          "fill": {"value": null},
          "stroke": {"value": "#3794d679"},
          "strokeWidth": {"value": 0.8},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "source_2", "field": "Visitors"},
      "range": {"scheme": "yellowgreenblue"},
      "interpolate": "hcl",
      "zero": false
    }
  ],
  "legends": [
    {
      "format": ".2s",
      "orient": "bottom-right",
      "title": "Number of Visitors",
      "stroke": "color",
      "direction": "horizontal",
      "gradientLength": 100,
      "encode": {"gradient": {"update": {"opacity": {"value": 0.8}}}}
    }
  ],
  "config": {}
}